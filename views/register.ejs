      color: var(--text-gray);
      margin-bottom: 2rem;
      font-size: 0.95rem;
    }

    .error-message {
      background: #fee2e2;
      color: #7f1d1d;
      padding: 1rem;
      border-radius: 0.5rem;
      margin-bottom: 1rem;
      border-left: 4px solid #e63946;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .success-message {
      background: #dcfce7;
      color: #166534;
      padding: 1rem;
      border-radius: 0.5rem;
      margin-bottom: 1rem;
      border-left: 4px solid #22c55e;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group label {
      display: flex;
      align-items: center;
      margin-bottom: 0.5rem;
      font-weight: 600;
      color: var(--text-dark);
      font-size: 0.95rem;
    }

    .form-group label span {
      margin-right: 0.5rem;
      font-size: 1.1rem;
    }

    .form-group input {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 1px solid var(--border-gray);
      border-radius: 0.5rem;
      font-size: 0.95rem;
      transition: all var(--transition-fast);
    }

    .form-group input:focus {
      outline: none;
      border-color: var(--primary-blue);
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .password-requirements {
      background: #f0fdf4;
      padding: 1rem;
      border-radius: 0.5rem;
      margin-bottom: 1.5rem;
      border-left: 4px solid var(--primary-blue);
    }

    .requirements-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .requirements-list li {
      padding: 0.4rem 0;
      font-size: 0.85rem;
      color: var(--text-gray);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .requirements-list li.met {
      color: #22c55e;
      font-weight: 600;
    }

    .req-check {
      display: inline-block;
      width: 16px;
      height: 16px;
      border-radius: 50%;
      border: 2px solid var(--border-gray);
      text-align: center;
      line-height: 12px;
      font-size: 0.75rem;
    }

    .req-check.met {
      background: #22c55e;
      border-color: #22c55e;
      color: white;
    }

    .button-group {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1rem;
      margin-top: 2rem;
    }

    .register-button {
      padding: 0.75rem 1.5rem;
      background: var(--primary-blue);
      color: white;
      border: none;
      border-radius: 0.5rem;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all var(--transition-fast);
    }

    .register-button:hover:not(:disabled) {
      background: #2563eb;
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3);
    }

    .register-button:disabled {
      background: #cbd5e1;
      cursor: not-allowed;
      opacity: 0.6;
    }

    .auth-footer {
      text-align: center;
      margin-top: 1.5rem;
      color: var(--text-gray);
      font-size: 0.9rem;
    }

    .auth-footer a {
      color: var(--primary-blue);
      text-decoration: none;
      font-weight: 600;
      transition: color var(--transition-fast);
    }

    .auth-footer a:hover {
      color: #2563eb;
      text-decoration: underline;
    }

    @media (max-width: 480px) {
      .auth-card {
        padding: 1.5rem;
      }

      .auth-card h2 {
        font-size: 1.5rem;
      }

      .password-requirements {
        margin-bottom: 1rem;
      }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
