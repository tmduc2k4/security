  <script>
    const passwordInput = document.getElementById('password');
    const confirmInput = document.getElementById('confirmPassword');
    const submitBtn = document.getElementById('submitBtn');

    const requirements = {
      length: /^.{12,}$/,
      uppercase: /[A-Z]/,
      lowercase: /[a-z]/,
      number: /[0-9]/,
      special: /[!@#$%^&*]/
    };

    function checkPassword() {
      const pwd = passwordInput.value;
      let allMet = true;

      Object.keys(requirements).forEach(key => {
        const element = document.getElementById(`req-${key}`);
        const check = document.getElementById(`check-${key}`);
        const isMet = requirements[key].test(pwd);

        if (isMet) {
          element.classList.add('met');
          check.classList.add('met');
          check.textContent = '‚úì';
        } else {
          element.classList.remove('met');
          check.classList.remove('met');
          check.textContent = '‚óã';
          allMet = false;
        }
      });

      // Check password match
      if (confirmInput.value && pwd !== confirmInput.value) {
        allMet = false;
      }

      submitBtn.disabled = !allMet;
    }

    function checkMatch() {
      const pwd = passwordInput.value;
      const confirm = confirmInput.value;
      
      if (confirm && pwd !== confirm) {
        confirmInput.style.borderColor = '#e63946';
      } else if (confirm) {
        confirmInput.style.borderColor = '#22c55e';
      } else {
        confirmInput.style.borderColor = 'var(--border-gray)';
      }

      checkPassword();
    }

    passwordInput.addEventListener('input', checkPassword);
    confirmInput.addEventListener('input', checkMatch);
  </script>
