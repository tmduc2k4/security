# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# For local development:
MONGODB_URI=mongodb://localhost:27017/laptopstore
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/laptopstore?retryWrites=true&w=majority

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# Security Settings - Rate Limiting
# For DEVELOPMENT: Increase these values to avoid hitting limits during testing
# For PRODUCTION: Use default values (100 and 5)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000
STRICT_RATE_LIMIT_MAX=50

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database (if needed in future)
# DB_HOST=localhost
# DB_PORT=27017
# DB_NAME=laptopstore

# Email Configuration (if needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-password
